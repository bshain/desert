<h1>Show an individual product</h1>

<%= link_to "Edit Product", edit_product_path(@product) %> | <%= link_to "Back to Products", products_path %> | <%= link_to "Delete", @product, confirm: "Are you sure you want to delete this product?", method: :delete %>

<p>
	<%= @product[:name] %><br/>
	<%= @product[:price_in_cents] %><br/>
	<%= @product[:description] %><br/>
	<%= image_tag (@product[:pic_url]) %>

</p>

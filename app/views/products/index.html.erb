<h1>Index: Displays all Products</h1>

<%= link_to "New Product", new_product_path %> | <%= link_to "Sign up", new_user_path %> | <%= link_to "Sign in", new_session_path %> | <%= link_to "Log Out", session_path("walnuts"), method: :delete %>

<% @products.each do |product| %>
	<p>
	<strong>Name: </strong><%= product.name %><br/>
	<strong>Price: </strong><%= product.price_in_cents %><br/>
	<strong>Description: </strong><%= product.description %><br/>
	<%= link_to image_tag(product.pic_url), product_path(product) %>
<% end %>
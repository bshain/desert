<h1>Log In!</h1>

<%= link_to "Back to Products", products_path %> | <%= link_to "Sign Up", new_user_path %>

<%= form_tag sessions_path do %>
<div>
	<p>
		<%= label_tag :email %><br/>
		<%= text_field_tag :email %>
	</p>
</div>
<div>
	<p>
		<%= label_tag :password %><br/>
		<%= password_field_tag :password %>
	</p>
</div>
<div>
	<%= submit_tag "Log in" %>
</div>
<% end %>